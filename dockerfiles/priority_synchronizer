# ----------- Build Stage -----------
FROM python:3.11-alpine AS build

# Add metadata
LABEL maintainer="bigbrotr"
LABEL description="BigBrotr Priority Synchronizer Service - High-Priority Relay Archival"

# Install build dependencies
RUN apk add --no-cache \
    build-base \
    pkgconfig \
    libffi-dev \
    openssl-dev \
    python3-dev \
    musl-dev

WORKDIR /build

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install dependencies to a temporary location
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt

# ----------- Final Runtime Stage -----------
FROM python:3.11-alpine

# Add metadata
LABEL maintainer="bigbrotr"
LABEL description="BigBrotr Priority Synchronizer Service - High-Priority Relay Archival"
LABEL version="1.0.0"

# Install runtime dependencies (only what's needed)
RUN apk add --no-cache libffi openssl wget

# Create non-root user
RUN addgroup -g 1000 bigbrotr && \
    adduser -D -u 1000 -G bigbrotr bigbrotr

WORKDIR /app

# Copy Python packages from build stage
COPY --from=build /install /usr/local

# Copy application code
COPY src/ /app/

# Change ownership to non-root user
RUN chown -R bigbrotr:bigbrotr /app

# Switch to non-root user
USER bigbrotr

# Expose health check port
EXPOSE 8080

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Run the application
CMD ["python", "priority_synchronizer.py"]
